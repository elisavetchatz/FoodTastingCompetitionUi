{
  "name": "food-tasting-competition",
  "version": "1.0.0",
  "description": "Full-stack food tasting competition voting application",
  "main": "backend/src/server.js",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "build:backend": "cd backend && npm install --production",
    "render-build": "npm run install-all && npm run build",
    "render-start": "cd backend && npm start"
  },
  "keywords": ["food", "tasting", "voting", "competition", "fullstack"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
